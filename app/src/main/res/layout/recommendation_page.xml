<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/gambarMarketingAgency"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/namaMarketingAgency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Digital Marketing Agency"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/gambarMarketingAgency"
        app:layout_constraintTop_toTopOf="@id/gambarMarketingAgency"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hargaMarketingAgency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Harga Digital Marketing Agency"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/gambarMarketingAgency"
        app:layout_constraintTop_toBottomOf="@id/namaMarketingAgency"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lokasiMarketingAgency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lokasi Digital Marketing"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/gambarMarketingAgency"
        app:layout_constraintTop_toBottomOf="@id/hargaMarketingAgency"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
